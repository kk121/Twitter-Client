<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_4dp"
        android:layout_marginLeft="@dimen/spacing_16dp"
        android:layout_marginRight="@dimen/spacing_16dp"
        android:layout_marginTop="@dimen/spacing_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"
                tools:text="Farhan Akhtar" />

            <TextView
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/name"
                android:layout_marginLeft="@dimen/spacing_16dp"
                android:layout_toRightOf="@+id/name"
                tools:text="\@FarOutAkhtar" />

            <TextView
                android:id="@+id/tweet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/spacing_10dp"
                android:lineSpacingExtra="@dimen/spacing_8dp"
                tools:text="For all the madness from our  #FarhanLive gig in Mumbai last night.. Click here --> http://on.fb.me/1Wizuxe  " />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>